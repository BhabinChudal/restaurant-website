<%- layout('./layout/boilerplate') -%>
<body class="index-body">
    <div class="card-container">
        <% for(let data of datas){ %>
            <a href="/menu/<%= data.id %>" class="card-link">
                <div class="card card-frame" style="width: 35rem; height:35rem;">
                    <img src="<%= data.image.url %>" class="card-img-top card-image" alt="card-image">
                    <div class="card-body">
                        <div class="card-text">
                            <h2 class="card-text__heading"> <%= data.name %> </h2>
                            <p class="card-text__price">  &#x24; <%= data.price %> </p>

                        </div>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
</body>