<%- layout('./layout/boilerplate') -%>
<body>

    <div class="card-container offset-2 col-7 mb-4">

        <h2 class="heading-tertiary"><%= data.name %></h2>
        
        <div class="card " style="height:40rem;">
            <img src="<%= data.image.url %>" class="card-img-bottom" alt="card-image">
        </div>

        <div class="card-body">
            <div class="description">
                <%= data.description %>
            </div><br>
            <div class="price">
                &#x24;<%= data.price %>
            </div><br>
            <div class="category">
                Category: <%= data.category %>
            </div><br>
            <div class="spice_level">
                Spicy: <%= data.spice_level %>
            </div><br>
    
            <div class="card-btns">
                <a href="/menu/<%= data.id %>/edit" class="btn btn-dark edit-btn show-button ">Edit</a>
                <form action="/menu/<%= data.id %>?_method=DELETE" method="POST" >
                   <button class="btn btn-dark delete-btn show-button">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <hr>

    <form action="/review" method="POST"  class=" needs-validation was-validated" novalidate="">
        <h1 class="review-generator-heading">Review</h1>
        <div class="mb-3 card-container offset-2 col-7 review-generator-outerbox">
            <input type="hidden" name="review[menuName]" value="<%= data.name %>">
            <div>
              <label for="fullname" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="fullname"  name="review[customer]" placeholder="Hiraby Hirona">
            </div>
      
            <div>
              <label for="image" class="form-label">Image Link</label>
              <input type="url" class="form-control" name="review[image]"  id="image" >
            </div>
      
            <div class="mb-3">
              <label for="review" class="form-label">Review</label>
              <textarea class="form-control" id="review"  rows="3" name="review[review]" required></textarea>
            </div>
      
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" class="form-range" id="rating" max=5 min=1 name="review[rating]">
            </div>
            <div class="mb3 review-generator-btn-box">
                <button class="add-btn review-generator-btn ">Add</button>
            </div>
            
          </div>

    </form>
</body>